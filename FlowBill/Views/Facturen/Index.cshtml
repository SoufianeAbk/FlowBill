@model IEnumerable<FlowBill.Models.Factuur>

@{
    ViewData["Title"] = "Facturen";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Facturen</h1>
        <a asp-controller="Bestellingen" asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nieuwe Bestelling
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="card shadow">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover" id="dataTable">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.FactuurNummer)</th>
                                <th>Klant</th>
                                <th>@Html.DisplayNameFor(model => model.FactuurDatum)</th>
                                <th>@Html.DisplayNameFor(model => model.VervalDatum)</th>
                                <th>@Html.DisplayNameFor(model => model.Totaal)</th>
                                <th>@Html.DisplayNameFor(model => model.Status)</th>
                                <th>Email</th>
                                <th>Acties</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@Html.DisplayFor(modelItem => item.FactuurNummer)</strong>
                                    </td>
                                    <td>@item.Bestelling.Klant.Bedrijfsnaam</td>
                                    <td>@item.FactuurDatum.ToString("dd-MM-yyyy")</td>
                                    <td>
                                        @if (item.Status == FlowBill.Models.FactuurStatus.Openstaand && item.VervalDatum < DateTime.Now)
                                        {
                                            <span class="text-danger">
                                                <i class="fas fa-exclamation-circle"></i>
                                                @item.VervalDatum.ToString("dd-MM-yyyy")
                                            </span>
                                        }
                                        else
                                        {
                                            @item.VervalDatum.ToString("dd-MM-yyyy")
                                        }
                                    </td>
                                    <td><strong>€ @item.Totaal.ToString("N2")</strong></td>
                                    <td>
                                        @switch (item.Status)
                                        {
                                            case FlowBill.Models.FactuurStatus.Openstaand:
                                                <span class="badge badge-warning">Openstaand</span>
                                                break;
                                            case FlowBill.Models.FactuurStatus.Betaald:
                                                <span class="badge badge-success">Betaald</span>
                                                break;
                                            case FlowBill.Models.FactuurStatus.Vervallen:
                                                <span class="badge badge-danger">Vervallen</span>
                                                break;
                                            case FlowBill.Models.FactuurStatus.Geannuleerd:
                                                <span class="badge badge-secondary">Geannuleerd</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        @if (item.EmailVerzonden)
                                        {
                                            <span class="text-success" title="Verzonden op @item.EmailVerzondenOp?.ToString("dd-MM-yyyy HH:mm")">
                                                <i class="fas fa-check-circle"></i>
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">
                                                <i class="fas fa-times-circle"></i>
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="dropdown">
                                            <button class="btn btn-sm btn-secondary dropdown-toggle" type="button" 
                                                    id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                Acties
                                            </button>
                                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                                <a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id">
                                                    <i class="fas fa-eye"></i> Bekijken
                                                </a>
                                                <a class="dropdown-item" asp-action="Download" asp-route-id="@item.Id">
                                                    <i class="fas fa-download"></i> Download PDF
                                                </a>
                                                @if (item.Status == FlowBill.Models.FactuurStatus.Openstaand)
                                                {
                                                    <form asp-action="MarkeerBetaald" asp-route-id="@item.Id" method="post" class="d-inline">
                                                        <button type="submit" class="dropdown-item">
                                                            <i class="fas fa-check"></i> Markeer als betaald
                                                        </button>
                                                    </form>
                                                }
                                                <a class="dropdown-item" asp-action="VerstuurOpnieuw" asp-route-id="@item.Id">
                                                    <i class="fas fa-envelope"></i> Verstuur opnieuw
                                                </a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-file-invoice fa-3x text-muted mb-3"></i>
                    <p class="text-muted">Nog geen facturen aanwezig.</p>
                    <a asp-controller="Bestellingen" asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Maak eerste bestelling
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.11.5/i18n/nl-NL.json"
                },
                "order": [[ 2, "desc" ]]
            });
        });
    </script>
}