@model IEnumerable<FlowBill.Models.Klant>

@{
    ViewData["Title"] = "Klanten";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Klanten</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nieuwe Klant
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="card shadow">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover" id="dataTable">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Bedrijfsnaam)</th>
                                <th>@Html.DisplayNameFor(model => model.Contactpersoon)</th>
                                <th>@Html.DisplayNameFor(model => model.Email)</th>
                                <th>@Html.DisplayNameFor(model => model.Telefoon)</th>
                                <th>@Html.DisplayNameFor(model => model.Stad)</th>
                                <th>Acties</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Bedrijfsnaam)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Contactpersoon)</td>
                                    <td>
                                        <a href="mailto:@item.Email">@item.Email</a>
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.Telefoon)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Stad)</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-info" title="Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-warning" title="Bewerken">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-danger" title="Verwijderen">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-users fa-3x text-muted mb-3"></i>
                    <p class="text-muted">Nog geen klanten aanwezig.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Voeg eerste klant toe
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.11.5/i18n/nl-NL.json"
                }
            });
        });
    </script>
}