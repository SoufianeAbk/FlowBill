@model IEnumerable<FlowBill.Models.Product>

@{
    ViewData["Title"] = "Producten";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Producten</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nieuw Product
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="card shadow">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover" id="productenTable">
                        <thead>
                            <tr>
                                <th>SKU</th>
                                <th>Productnaam</th>
                                <th>Prijs (excl. BTW)</th>
                                <th>BTW %</th>
                                <th>Voorraad</th>
                                <th>Actief</th>
                                <th>Acties</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.SKU)</td>
                                    <td>
                                        <strong>@Html.DisplayFor(modelItem => item.Naam)</strong>
                                        @if (!string.IsNullOrEmpty(item.Omschrijving))
                                        {
                                            <br>
                                
                                            <small class="text-muted">@item.Omschrijving</small>
                                        }
                                    </td>
                                    <td>€ @item.Prijs.ToString("N2")</td>
                                    <td>@Html.DisplayFor(modelItem => item.BTWPercentage)%</td>
                                    <td>
                                        <span class="badge badge-@(item.Voorraad > 10 ? "success" : item.Voorraad > 0 ? "warning" : "danger")">
                                            @item.Voorraad
                                        </span>
                                    </td>
                                    <td>
                                        @if (item.IsActief)
                                        {
                                            <span class="badge badge-success">Actief</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">Inactief</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-info" title="Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-warning" title="Bewerken">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-danger" title="Verwijderen">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-box fa-3x text-muted mb-3"></i>
                    <p class="text-muted">Nog geen producten aanwezig.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Voeg eerste product toe
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#productenTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.11.5/i18n/nl-NL.json",
                    "search": "Zoeken:",
                    "lengthMenu": "Toon _MENU_ resultaten per pagina",
                    "info": "_START_ tot _END_ van _TOTAL_ resultaten",
                    "infoEmpty": "Geen resultaten",
                    "infoFiltered": "(gefilterd van _MAX_ totaal)",
                    "paginate": {
                        "first": "Eerste",
                        "last": "Laatste",
                        "next": "Volgende",
                        "previous": "Vorige"
                    },
                    "zeroRecords": "Geen resultaten gevonden"
                },
                "pageLength": 10,
                "lengthMenu": [[10, 25, 50, 100, -1], [10, 25, 50, 100, "Alle"]],
                "order": [[1, "asc"]],
                "columnDefs": [
                    { "orderable": false, "targets": 6 }
                ],
                "responsive": true,
                "dom": '<"row"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>' +
                       '<"row"<"col-sm-12"tr>>' +
                       '<"row"<"col-sm-12 col-md-5"i><"col-sm-12 col-md-7"p>>'
            });
        });
    </script>
}