@model FlowBill.Models.Product

@{
    ViewData["Title"] = "Nieuw Product";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header">
                    <h4 class="mb-0">Nieuw Product Toevoegen</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Naam" class="control-label"></label>
                                    <input asp-for="Naam" class="form-control" />
                                    <span asp-validation-for="Naam" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="CategoryId" class="control-label"></label>
                                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                                        <option value="">-- Selecteer categorie (optioneel) --</option>
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="SKU" class="control-label"></label>
                            <input asp-for="SKU" class="form-control" placeholder="Bijv. WEB001, GAME001, SPORT001" />
                            <span asp-validation-for="SKU" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Omschrijving" class="control-label"></label>
                            <textarea asp-for="Omschrijving" class="form-control" rows="3"
                                      placeholder="Beschrijving van het product"></textarea>
                            <span asp-validation-for="Omschrijving" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Prijs" class="control-label"></label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">€</span>
                                        </div>
                                        <input asp-for="Prijs" class="form-control" type="number" step="0.01" />
                                    </div>
                                    <span asp-validation-for="Prijs" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="BTWPercentage" class="control-label"></label>
                                    <div class="input-group">
                                        <input asp-for="BTWPercentage" class="form-control" type="number" />
                                        <div class="input-group-append">
                                            <span class="input-group-text">%</span>
                                        </div>
                                    </div>
                                    <small class="form-text text-muted">
                                        Standaard: 21% (algemeen), 9% (verlaagd), 0% (vrijgesteld)
                                    </small>
                                    <span asp-validation-for="BTWPercentage" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Voorraad" class="control-label"></label>
                                    <input asp-for="Voorraad" class="form-control" type="number" />
                                    <span asp-validation-for="Voorraad" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="custom-control custom-checkbox">
                                <input asp-for="IsActief" class="custom-control-input" checked />
                                <label asp-for="IsActief" class="custom-control-label"></label>
                            </div>
                            <small class="form-text text-muted">
                                Alleen actieve producten zijn beschikbaar bij het aanmaken van bestellingen
                            </small>
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Opslaan
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Annuleren
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
